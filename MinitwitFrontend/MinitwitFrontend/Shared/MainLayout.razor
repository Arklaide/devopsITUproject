@inherits MainLayoutBase


<CascadingValue Value="@isAuthenticated" Name="IsAuthenticated">
   
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>

            <div class="main">
                <div class="top-row px-4" style="display: flex; align-items: center; justify-content: center">
                    <div style="width: 100%" class="filler"></div>
                    <a @onclick="@LogoutUser" class="ml-md-auto">Sign Out</a>
                    <a style="padding-left: 10px" @onclick="@LoginUser" class="ml-md-auto">Sign In</a>
                </div>

                <div class="content px-4">
                    @Body
                </div>
            </div>
        </div>
    

</CascadingValue>